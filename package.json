		"onnxruntime-web": "^1.23.2",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-hook-form": "^7.52.1",
		"swr": "^2.2.5",
		"workbox-window": "^7.1.0"
	},
