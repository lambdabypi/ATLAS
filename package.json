{
	"name": "atlas-clinical-decision-support",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"clean:windows": "if exist .next rmdir /s /q .next & if exist node_modules rmdir /s /q node_modules & if exist package-lock.json del /q package-lock.json",
		"clean:powershell": "powershell -Command \"Remove-Item -Recurse -Force .next, node_modules, package-lock.json -ErrorAction SilentlyContinue\"",
		"clean": "powershell -Command \"Remove-Item -Recurse -Force .next, node_modules, package-lock.json -ErrorAction SilentlyContinue\"",
		"fresh-install": "npm run clean && npm install",
		"install:verbose": "npm install --verbose",
		"install:legacy": "npm install --legacy-peer-deps --verbose",
		"test:imports": "node -e \"try { require('react'); require('next'); console.log('✅ Basic imports work'); } catch(e) { console.log('❌ Import failed:', e.message); }\"",
		"dev:windows": "set NODE_OPTIONS=--max-old-space-size=4096 && next dev"
	},
	"dependencies": {
		"@google/genai": "^1.22.0",
		"@xenova/transformers": "^2.17.2",
